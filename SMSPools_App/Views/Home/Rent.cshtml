            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section Scripts {
    <script>
        $(document).ready(function () {

             $("form").on("submit", function (e) {
                e.preventDefault(); // Prevent form submission
                const id = $("#accountId").val().trim();
                console.log("AccountId:", id);

                $.post('@Url.Action("RentNumber", "Rent")', { id: id }, function (res) {
                    if (res.success) {
                        $("#phoneNumber").val(res.phoneNumber);
                        $("#phoneSection").show();

                        console.log("RentNumber response:", res);
                        $("#getOtpBtn").data("order_code", res.orderCode);
                        // $("#resendBtn").data("phone", res.phoneNumber);
                    } else {
                        alert("Error: " + res.message);
                    }
                });
            });

            $("#getOtpBtn").on("click", function() {
                const id = $("#accountId").val().trim();
                const orderCode = $(this).data("order_code");

                console.log("Sending orderCode to server:", orderCode);

                startCountdown();

                $.post('@Url.Action("GetOtp", "Rent")', { id: id, orderCode: orderCode }, function (res) 
                {
                    if (res.success && res.otp) {
                        clearInterval(countdownInterval);
                        $("#otpDisplay").text(res.otp);
                    } else {
                        $("#otpDisplay").text("OTP not available, system will try again.");
                    }
                });
            });

            let countdownInterval;
            let countdown = 30;

            function startCountdown() {
                clearInterval(countdownInterval);
                countdown = 30;
                $("#otpDisplay").text("Waiting for OTP... (" + countdown + "s)");
                countdownInterval = setInterval(() => {
                     countdown--;
                    if (countdown > 0) {
                        $("#otpDisplay").text("Waiting for OTP... (" + countdown + "s)");
                    } else {
                        clearInterval(countdownInterval);
                        $("#otpDisplay").text("Failed to get OTP. Please try again!!");
                    }
                }, 1000);
            }

             $("#resendBtn").on("click", function() {
                const id = $("#accountId").val().trim();
                const orderCode = $("#getOtpBtn").data("order_code");

                $.post('@Url.Action("ResendCode", "Rent")', { id: id, orderCode: orderCode }, function (res)
                {
                    if (res.success) {
                        alert("Resent successfully");
                    } else {
                        alert("Failed to resend code");
                    }
                });
            });

        });
    </script>
}
